<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_first"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="#ccc"
        app:cardCornerRadius="@dimen/margin_min"
        app:cardElevation="5dp"
        android:layout_marginTop="@dimen/margin_max"
        app:contentPadding="@dimen/margin_middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_avator1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/avator1" />

            <TextView
                android:id="@+id/tv_test1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_min"
                android:gravity="center_horizontal"
                android:text="二逼青年欢乐多" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_second"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="#ccc"
        app:cardCornerRadius="@dimen/margin_min"
        app:cardElevation="5dp"
        android:layout_marginTop="@dimen/margin_max"
        app:contentPadding="@dimen/margin_middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_avator2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/avator2" />

            <TextView
                android:id="@+id/tv_test2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_min"
                android:gravity="center_horizontal"
                android:text="二逼青年欢乐多" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
